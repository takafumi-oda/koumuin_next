<div class = "reply-box-infomation">
  <%= react_component("UserModal", props: { user: reply.user }, prerender: false) %>
  <p><%= "返信日時：#{datetime_format(reply.created_at)}" %></p>
</div>
<div class = "reply-box-content">
  <%= safe_join(reply.content.split("\n"),tag(:br)) %>
</div>
<div class = "reply-box-footer">
  <%= react_component("Like", props: { replyId: reply.id, likeId: reply.like_by(current_user)&.id, likeCount: reply.likes.size, user: current_user }, prerender: false) %>
  <%= link_to "削除する", post_reply_path(post, reply.id), method: :delete, class: "btn btn-outline-danger btn-sm" if reply_delete_permission?(reply) %>
</div>
