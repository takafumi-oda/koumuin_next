<header>
  <nav class = "header-wrapper navbar d-flex justify-content-between">
    <div class = "header-flex-box1 fw-bold fst-italic navbar-brand">
      <%= link_to "公務員NEXT", root_path %>
    </div>
    <div class = "header-flex-box2">
      <%= form_with url: search_path, method: :get, class: "search-box", local: true do |form| %>
        <div class = "input-group search-box-text">
          <%= form.search_field :keyword, class: "form-control", placeholder: "キーワードで検索" %>
          <span class = "search-btn">
            <%= form.submit "\uf002", class: "search-icon" %>
          </span>
        </div>
      <% end %>
    </div>
    <div class = "header-flex-box3">
      <% if current_user && current_user.admin? %>
        <%= link_to " 管理者画面", admin_users_path, class: "fas fa-users-cog btn btn-dark" %>
      <% else %>
        <%= link_to " 相談する", new_post_path, class: "far fa-comment-dots btn btn-primary fw-bold" %>
      <% end%>
    </div>
    <% if current_user %>
      <div class="header-flex-box4">
        <button class = "navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
          <span class = "navbar-toggler-icon"></span>
        </button>
        <div class ="login-header-menu collapse navbar-collapse" id="navbar-menu">
          <ul class = "navbar-nav fw-bold">
            <li class = "nav-item">
              <%= link_to "ユーザー情報", user_path(current_user.id), class: "nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to "設定", edit_user_path(current_user.id), class: "nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to "パスワードの変更", edit_password_path(current_user.id), class: "nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to "これまでした相談", posts_user_path(current_user.id), class: "nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to "お気に入り", favorites_path, class: "nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="header-flex-box4 navbar-expand-lg">
        <button class = "navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
          <span class = "navbar-toggler-icon"></span>
        </button>
        <div class ="not-login-header-menu collapse navbar-collapse" id="navbar-menu">
          <ul class = "navbar-nav">
            <li class = "nav-item">
              <%= link_to " ログイン", login_path, class: "fas fa-sign-in-alt nav-link" %>
            </li>
            <li class = "nav-item">
              <%= link_to " 新規登録", new_user_path, class: "fas fa-user-plus nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </nav>
</header>
