<div class = "content-wrapper">
  <div class = "top-wrapper">
    <div class = "top-login-form">
      <div class = "card">
        <div class = "card-body top-card-body">
          <%= form_with scope: :session, url: login_path, class: "form-horizontal", local: true do |form| %>
            <div class = "form-group top-form-group">
              <%= form.label :email, "メールアドレス", class: "card-name" %>
              <%= form.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
            </div>
            <div class = "form-group">
              <%= form.label :password, "パスワード", class: "card-name" %>
              <%= form.password_field :password, class: "form-control", placeholder: "パスワード" %>
            </div>
            <div class = "btn-position">
              <%= form.submit "ログイン", class: "btn btn-primary top-btn" %>
            </div>
          <% end %>
          <%= form_with scope: :session, url: login_path, local: true do |form| %>
            <%= form.hidden_field :email, value: "guest@email" %>
            <%= form.hidden_field :password, value: "guest" %>
            <div class = "btn-position">
              <%= form.submit "ゲストユーザーでログインする", class: "btn btn-outline-success top-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class = "post-list-wrapper">
    <table class = "post-list table">
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to "#{post.title}", post_path(post.id) %>
            <%= "#{post.user.name}" %>
            <%= datetime_format(post.most_recent_update) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
