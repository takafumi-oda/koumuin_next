<% if flash.notice %>
  <p><%= flash.notice %></p>
<% end %>


<% if flash.alert %>
  <p><%= flash.alert %></p>
<% end %>

<%= render "shared/error", obj: @post %>

<h3>新規投稿</h3>
<%= form_with model: @post, local: true do |form| %>
  <div><%= form.label :title, "タイトル" %></div>
  <div><%= form.text_field :title, placeholder: "タイトル" %></div>
  <div><%= form.label :content, "本文" %></div>
  <div><%= form.text_area :content, placeholder: "本文" %></div>
  <div><%= form.submit "投稿" %></div>
<% end %>
